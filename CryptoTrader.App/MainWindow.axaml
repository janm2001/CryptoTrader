<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:CryptoTrader.App.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="CryptoTrader.App.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="CryptoTrader" Width="1000" Height="700"
        WindowStartupLocation="CenterScreen">
    
    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#1a1a2e" Padding="20,15">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <TextBlock Text="ðŸ’° CryptoTrader" FontSize="24" FontWeight="Bold" Foreground="#e94560" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="#888" VerticalAlignment="Center" Margin="20,0,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="{Binding Username}" Foreground="White" VerticalAlignment="Center" 
                               IsVisible="{Binding IsLoggedIn}"/>
                    <Button Content="Logout" Command="{Binding LogoutCommand}" 
                            IsVisible="{Binding IsLoggedIn}"
                            Background="#e94560" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- Login Panel (shown when not logged in) -->
            <Border Background="#16213e" IsVisible="{Binding !IsLoggedIn}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Spacing="15">
                    <TextBlock Text="Welcome to CryptoTrader" FontSize="28" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Track your crypto portfolio" Foreground="#888" 
                               HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    
                    <TextBox Text="{Binding Username}" Watermark="Username" 
                             Background="#1a1a2e" Foreground="White" BorderBrush="#333"/>
                    <TextBox Text="{Binding Password}" Watermark="Password" PasswordChar="â€¢"
                             Background="#1a1a2e" Foreground="White" BorderBrush="#333"/>
                    
                    <Grid ColumnDefinitions="*,10,*">
                        <Button Grid.Column="0" Content="Login" Command="{Binding LoginCommand}"
                                HorizontalAlignment="Stretch" Background="#e94560" Foreground="White"
                                HorizontalContentAlignment="Center" Padding="15,10"/>
                        <Button Grid.Column="2" Content="Register" Command="{Binding RegisterCommand}"
                                HorizontalAlignment="Stretch" Background="#0f3460" Foreground="White"
                                HorizontalContentAlignment="Center" Padding="15,10"/>
                    </Grid>
                    
                    <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoading}" 
                                 Foreground="#e94560" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Dashboard (shown when logged in) -->
            <Grid IsVisible="{Binding IsLoggedIn}" RowDefinitions="Auto,*" Background="#16213e">
                <!-- Search Bar -->
                <Border Grid.Row="0" Background="#1a1a2e" Padding="15">
                    <Grid ColumnDefinitions="*,Auto,Auto">
                        <TextBox Text="{Binding SearchQuery}" Watermark="Search cryptocurrencies..."
                                 Background="#16213e" Foreground="White" BorderBrush="#333"/>
                        <Button Grid.Column="1" Content="ðŸ” Search" Command="{Binding SearchCommand}"
                                Margin="10,0" Background="#0f3460" Foreground="White"/>
                        <Button Grid.Column="2" Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}"
                                Background="#e94560" Foreground="White"/>
                    </Grid>
                </Border>
                
                <!-- Crypto List -->
                <Border Grid.Row="1" Margin="15">
                    <Grid RowDefinitions="Auto,*">
                        <!-- Header -->
                        <Border Background="#1a1a2e" Padding="15,10" CornerRadius="8,8,0,0">
                            <Grid ColumnDefinitions="50,*,120,120,120,100">
                                <TextBlock Text="#" Foreground="#888" FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" Text="Name" Foreground="#888" FontWeight="Bold"/>
                                <TextBlock Grid.Column="2" Text="Price" Foreground="#888" FontWeight="Bold" TextAlignment="Right"/>
                                <TextBlock Grid.Column="3" Text="24h Change" Foreground="#888" FontWeight="Bold" TextAlignment="Right"/>
                                <TextBlock Grid.Column="4" Text="Market Cap" Foreground="#888" FontWeight="Bold" TextAlignment="Right"/>
                                <TextBlock Grid.Column="5" Text="Volume" Foreground="#888" FontWeight="Bold" TextAlignment="Right"/>
                            </Grid>
                        </Border>
                        
                        <!-- List -->
                        <ListBox Grid.Row="1" ItemsSource="{Binding CryptoPrices}" 
                                 SelectedItem="{Binding SelectedCrypto}"
                                 Background="#0f3460" BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="15,12" BorderBrush="#1a1a2e" BorderThickness="0,0,0,1">
                                        <Grid ColumnDefinitions="50,*,120,120,120,100">
                                            <TextBlock Text="{Binding MarketCapRank}" Foreground="#888" VerticalAlignment="Center"/>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                                                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Symbol}" Foreground="#888" VerticalAlignment="Center" 
                                                           FontSize="12"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="2" Text="{Binding CurrentPrice, StringFormat='\{0:C2\}'}" 
                                                       Foreground="White" TextAlignment="Right" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="{Binding PriceChangePercentage24h, StringFormat='\{0:F2\}%'}"
                                                       TextAlignment="Right" VerticalAlignment="Center">
                                                <TextBlock.Foreground>
                                                    <MultiBinding Converter="{x:Static vm:PriceChangeColorConverter.Instance}">
                                                        <Binding Path="PriceChangePercentage24h"/>
                                                    </MultiBinding>
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                            <TextBlock Grid.Column="4" Text="{Binding MarketCap, StringFormat='\{0:N0\}'}" 
                                                       Foreground="#888" TextAlignment="Right" VerticalAlignment="Center" FontSize="12"/>
                                            <TextBlock Grid.Column="5" Text="{Binding TotalVolume, StringFormat='\{0:N0\}'}" 
                                                       Foreground="#888" TextAlignment="Right" VerticalAlignment="Center" FontSize="12"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                
                <!-- Loading Overlay -->
                <Border Grid.Row="1" Background="#80000000" IsVisible="{Binding IsLoading}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Foreground="#e94560"/>
                        <TextBlock Text="Loading..." Foreground="White" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#1a1a2e" Padding="15,10">
            <TextBlock Text="CryptoTrader v1.0 - Powered by CoinGecko API" 
                       Foreground="#555" FontSize="11" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
