<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="using:CryptoTrader.App.Views"
        xmlns:models="using:CryptoTrader.App.Models"
        x:Class="CryptoTrader.App.Views.CryptoDetailWindow"
        Title="Crypto Details"
        Width="900" Height="600"
        MinWidth="700" MinHeight="500"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e">

    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#6c5ce7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#7d6ef0"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#2d2d4a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Styles>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#16162a" CornerRadius="10" Padding="20" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Coin Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image x:Name="CoinImage" Width="48" Height="48" Margin="0,0,15,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="CoinNameText" FontSize="24" FontWeight="Bold"/>
                        <TextBlock x:Name="CoinSymbolText" FontSize="14" Foreground="#808090"/>
                    </StackPanel>
                </StackPanel>

                <!-- Current Price -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="CurrentPriceText" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="PriceChangeText" FontSize="16"/>
                        <TextBlock x:Name="PriceChangePercentText" FontSize="16" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Rank -->
                <Border Grid.Column="2" Background="#2d2d4a" CornerRadius="5" Padding="15,10" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="Rank" FontSize="12" Foreground="#808090" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="RankText" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Price History List -->
            <Border Grid.Column="0" Background="#16162a" CornerRadius="10" Padding="15" Margin="0,0,10,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Price History (Last 24h)" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <ScrollViewer>
                        <ItemsControl x:Name="PriceHistoryList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:PriceDisplayItem">
                                    <Border Background="#2d2d4a" CornerRadius="5" Padding="10" Margin="0,0,0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding TimeText}" Foreground="#808090"/>
                                            <TextBlock Grid.Column="1" Text="{Binding PriceText}" FontWeight="SemiBold"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Right: Chart Area -->
            <Border Grid.Column="1" Background="#16162a" CornerRadius="10" Padding="15" Margin="10,0,0,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Price Chart" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <!-- Simple Chart using Canvas -->
                    <Border Background="#0d0d1a" CornerRadius="5">
                        <Canvas x:Name="ChartCanvas" ClipToBounds="True"/>
                    </Border>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Footer: Stats & Actions -->
        <Border Grid.Row="2" Background="#16162a" CornerRadius="10" Padding="20" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Market Cap" FontSize="12" Foreground="#808090"/>
                    <TextBlock x:Name="MarketCapText" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="24h Volume" FontSize="12" Foreground="#808090"/>
                    <TextBlock x:Name="VolumeText" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="24h High" FontSize="12" Foreground="#808090"/>
                    <TextBlock x:Name="HighText" FontSize="16" FontWeight="SemiBold" Foreground="#4ECB71"/>
                </StackPanel>

                <StackPanel Grid.Column="3">
                    <TextBlock Text="24h Low" FontSize="12" Foreground="#808090"/>
                    <TextBlock x:Name="LowText" FontSize="16" FontWeight="SemiBold" Foreground="#FF6B6B"/>
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Classes="primary" Content="Buy" Click="OnBuyClick" Margin="0,0,10,0"/>
                    <Button Classes="secondary" Content="Close" Click="OnCloseClick"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
